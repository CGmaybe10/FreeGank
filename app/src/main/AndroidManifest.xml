<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.freegank"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--主界面-->
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/StatusBarTransparentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--每日详情界面-->
        <activity
            android:name=".activity.DailyDetailActivity"
            android:theme="@style/StatusBarTransparentTheme"/>

        <!--查看图片的activity-->
        <activity android:name=".activity.MeiZhiActivity"/>

        <!--查看详细内容界面-->
        <activity android:name=".activity.ItemDetailActivity"/>
    </application>

</manifest>